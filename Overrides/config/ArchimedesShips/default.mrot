torch, unlit_redstone_torch, redstone_torch, stone_button, wooden_button, lever; 0x7; 4, 1, 3, 2;

# Sign
wall_sign; 0x7; 3, 4, 2, 5;

# Log
log, log2; 0xC; 4, 8, 4, 8;

# Quarts pillar
quartz_block; 0x7; 3, 4, 3, 4;

# Ladder
ladder; 0x7; 3, 4, 2, 5;

# Fence gate
fence_gate; 0x3; 0, 1, 2, 3;

