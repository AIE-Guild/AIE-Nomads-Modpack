# Pumpkin & Lantern
pumpkin, lit_pumpkin; 0x3; 0, 1, 2, 3;

# Stairs
oak_stairs, stone_stairs, brick_stairs, stone_brick_stairs, nether_brick_stairs, sandstone_stairs, spruce_stairs, birch_stairs, jungle_stairs, quartz_stairs, acacia_stairs, dark_oak_stairs; 0x3; 2, 1, 3, 0;

